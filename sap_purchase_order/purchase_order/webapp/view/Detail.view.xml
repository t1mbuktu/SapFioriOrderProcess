<mvc:View controllerName="purchaseorder.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout">

    <ObjectHeader id="purchaseOrderHeader"
		title="{Supplier}"
        titleActive="true"
		condensed="true"
		number="{
			parts:[{path:'Price'},{path:'CurrencyCode'}],
			type: 'sap.ui.model.type.Currency',
			formatOptions: {showMeasure: false}
		}"
		numberUnit="{DocumentCurrency}"
		class="sapUiResponsivePadding--header" >
		<ObjectAttribute text="{WeightMeasure} {WeightUnit} {Width} x {Depth} x {Height} {DimUnit}" />
	</ObjectHeader>
    <IconTabBar id="iconTabBar" class="sapUiResponsiveContentPadding">
        <items>
            <IconTabFilter id="iconTabBarFilter1" 
            icon="sap-icon://hint" 
            tooltip="">
            <content>
                    <VBox alignItems="Center" >
                        <Text text="Purchase Order: {/PurchaseOrder}" />
                        <Text text="Account Assignment: {/AccountAssignment}" />
                        <Text text="Delivery Date: {/DeliveryDate}" />
                        <Text text="Plant: {/Plant}" />
                        <Text text="Payment Terms: {/PaymentTerms}" />
                        <Text text="Incoterms: {/Incoterms}" />
                        <Text text="Company Code: {/CompanyCode}" />
                    </VBox>
                </content>
            </IconTabFilter>
        </items>
    </IconTabBar>

</mvc:View>
