<mvc:View controllerName="purchaseorder.controller.List"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page">
        <SearchField 
            liveChange=".onSearch"
        />
        <List
            id="OrdersList"
            items="{/A_PurchaseOrder}"
            headerText="Purchase Orders({viewModel>/itemCount})">
            <ObjectListItem
                title="{PurchaseOrder}"
                type="Active"
                press="onListItemPressed"
                number="100"
                numberUnit="{DocumentCurrency}"
            >
                <firstStatus>
                    <ObjectStatus
                        text="{path: 'PurchaseOrderDate', formatter: '.formatter.dateToText'}"
                    />
                </firstStatus>
                <ObjectAttribute text="{CreatedByUser}" />
            </ObjectListItem>
        </List>
    </Page>
</mvc:View>
